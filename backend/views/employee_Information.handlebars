<style>
    body {
        font-family: 'Source Serif Pro', serif;
        background: #ebebee6e;
        color: #322975;
    }


    /*{{!-- edit employee information form --}}*/
    .hide {
        position: absolute;
        top: -1px;
        left: -1px;
        width: 1px;
        height: 1px;
    }
</style>

<iframe name="hiddenFrame" class="hide"></iframe>


<form action="/employee/info/update" method="post" target="hiddenFrame">

    <div id="editForm" style="visibility: hidden; border:black;">
        <div class="mb-3">
            <label for="editPhoneNoEmployee" class="form-label">Phone number</label>
            <input name="phone_number" type="tel" class="form-control" id="editPhoneNo">
        </div>
        <div class="mb-3">
            <label for="editAddressEmployee" class="form-label">Address</label>
            <input name="addr" class="form-control" id="editAddress" rows="3"></textarea>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <input type="submit" value="Submit" class="btn" style="background-color: #322975; color:#d1cfdd "
                id="submitInfoBtn">
            </label>
        </div>


    </div>


</form>



</section>


{{!-- edit js --}}
<script>
    document.getElementById("editInfoBtn").onclick = function () {
        document.getElementById("editForm").style.visibility = "visible";
    }

    document.getElementById("submitInfoBtn").onclick = function () {
        var editForm = document.getElementById("editForm");
        editForm.style.visibility = "hidden";
    }
</script>

